<resources xmlns:tools="http://schemas.android.com/tools">




    // TEXT APPEARANCES

    <style name="AppTextBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/app_font_medium</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="AppTextBodyBig" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/app_font_medium</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextBody3Black" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/app_font_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/lighttextColor</item>
    </style>


    <style name="cardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">110dp</item>
        <item name="android:layout_marginBottom">-19dp</item>
        <item name="cardCornerRadius">19dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="AppTextSeperatorFull">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@color/textColor_seprator</item>
    </style>

    <style name="AppToolbarIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/toolbar_margin</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>
